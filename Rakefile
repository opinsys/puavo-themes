require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "puavo-themes"
    gem.summary = "Puavo themes"
    gem.email = "puavo@opinsys.fi"
    gem.homepage = "https://github.com/opinsys/puavo-themes"
    gem.description = "Rails 3 engine for Puavo theme assets"
    gem.authors = "Jouni Korhonen"
  end

  Jeweler::GemcutterTasks.new
rescue LoadError => e
  puts e
  puts "Jeweler, or one of its dependencies, is not available. Install it with: gem install jeweler"
end